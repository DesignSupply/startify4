{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "allowJs": true
  },
  "include": [
    "src/**/*.ts", 
    "src/**/*.js", 
    "src/**/*.tsx",
    "src/**/*.jsx", 
    "src/**/*.vue",
    "types/**/*.d.ts",
    "vite.config.js"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}
